        },
        {
            "label": "FE - DEV",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceRoot}/fe"
            },
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
